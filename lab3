//знайти довжину сторони квадрата, якщо відомо його периметр.
#include <stdio.h>

int main() {
    float perimeter, side;

    // Запит від користувача на ввід периметра квадрата
    printf("Введіть периметр квадрата: ");
    scanf("%f", &perimeter);

    // Обчислення довжини сторони квадрата за формулою P = 4s
    side = perimeter / 4;

    // Виведення результату на екран
    printf("Довжина сторони квадрата дорівнює %.2f\n", side);

    return 0;
}
