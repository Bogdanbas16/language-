#include <stdio.h>

int main() {
    int day;
    printf("Введіть номер дня тижня (1-7): ");
    scanf("%d", &day);

    // перевіряємо, який день тижня був введений і виводимо відповідне повідомлення
    switch (day) {
        case 1:
        case 2:
        case 3:
        case 4:
        case 5:
            printf("Робочий день\n");
            break;
        case 6:
            printf("Субота\n");
            break;
        case 7:
            printf("Неділя\n");
            break;
        default:
            printf("Неправильно введено номер дня тижня\n");
    }

    return 0;
}

